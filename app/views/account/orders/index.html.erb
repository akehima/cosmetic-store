<div class="product-box">
  <div class="container">
    <div class='row content-box order-box'>
      <div class='col-md-8 col-md-offset-2'>
        
        <h3><i class='fa fa-credit-card'></i> <%= t('account-order-index') %></h3>

        <% if @orders.length > 0 %>
          <table class='table table-hover'>
            
            <thead>
              <tr>
                <th><%= t('order-id') %></th>
                <th><%= t('order-total') %></th>
                <th><%= t('order-date') %></th>
                <th><%= t('order-status') %></th>
              </tr>
            </thead>

            <tbody>
              <% @orders.each do |order| %>
              <tr>
                <td class="width-25"># <%= link_to(order.id, order_path(order.token)) %></td>
                <td><%= order.currency %> <%= order.total %></td>
                <td><%= order.created_at.strftime("%Y-%m-%d - %H:%M") %></td>
                <td><%= t("order.#{order.aasm_state}") %></td>
              </tr>
              <% end %>
            </tbody>
          </table>

        
        <% else %>
          <div class="buy-box">
            <h1><%= t('order-no-data') %></h1>
            <br/>
            <%= link_to(t('btn-buy-now'), products_path, class:'btn btn-lg btn-default' ) %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
