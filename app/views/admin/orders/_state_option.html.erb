<div style="padding:10px; float:right;">
  <% case order.aasm_state %>
    <% when "order_placed" %>
      <%= link_to("отменить заказ",
                  cancel_admin_order_path(order),
                  class: "btn btn-default btn-sm", method: :post) %>
    <% when "paid" %>
      <%= link_to("отменить заказ",
                  cancel_admin_order_path(order),
                  class: "btn btn-default btn-sm", method: :post) %>
      <%= link_to("Отправка",
                  ship_admin_order_path(order),
                  class: "btn btn-default btn-sm", method: :post) %>
    <% when "shipping" %>
      <%= link_to("Установить, как уже отправлено",
                  shipped_admin_order_path(order),
                  class: "btn btn-default btn-sm", method: :post) %>
    <% when "shipped" %>
      <%= link_to("вернуть товар",
                  return_admin_order_path(order),
                  class: "btn btn-default btn-sm", method: :post) %>
    <% when "order_cancelled" %>
      <span class="label label-default">Заказ был отменен</span>
    <% when "good_returned" %>
      <span class="label label-default">Вернулся</span>
  <% end %>
</div>
