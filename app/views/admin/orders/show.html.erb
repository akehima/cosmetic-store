<div class="row">
  <div class="col-md-12">
    <h2> Информация для заказа (<%= render_order_paid_state(@order) %>) </h2>
    <%= render "admin/orders/state_option", order: @order %>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="80%">Информация о продукте</th>
          <th>цена за единицу товара</th>
          <th>количество</th>
        </tr>
      </thead>
      <tbody>
        <% @product_lists.each do |product_list| %>
          <tr>
            <td><%= product_list.product_name %></td>
            <td><%= product_list.product_price %></td>
            <td><%= product_list.quantity %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="total clearfix">
      <span class="pull-right">
        общий <%= @order.total %> CNY
      </span>
    </div>
    <hr>
    <h2> Данные получателя </h2>
    <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td>Получатель</td>
        </tr>
        <tr>
          <td><%= @order.shipping_name %> - <%= @order.shipping_address %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
